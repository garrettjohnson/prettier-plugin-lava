{
  "endOfLine": "lf",
  "trailingComma": "all",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "printWidth": 80,
  "bracketSameLine": true,
  "overrides": [
    {
      "files": "*.spec.ts",
      "options": {
        "printWidth": 100
      }
    },
    {
      "files": "*.lava",
      "options": {
        "bracketSameLine": true,
        "singleQuote": false,
        "printWidth": 600
      }
    }
  ]
}
